<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_screen_loyalty_card_item_height"
    android:layout_marginStart="@dimen/dimen_25_dp"
    android:layout_marginEnd="@dimen/dimen_25_dp"
    android:layout_marginTop="@dimen/dimen_5_dp"
    android:layout_marginBottom="@dimen/dimen_5_dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/home_screen_item_background">

    <ImageView
        android:id="@+id/loyaltyCardPreviewImageView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_0_dp"
        android:scaleType="fitXY"
        tools:src="@drawable/ic_product_preview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/loyaltyCardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/headling_16_sp"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="3"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/dimen_5_dp"
        tools:text="Card Loyalty Card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>