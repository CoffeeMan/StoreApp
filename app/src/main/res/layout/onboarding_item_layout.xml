<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/onboardingItemPreview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_dp"
        tools:src="@drawable/ic_product_preview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/onboardingItemPreviewBottom"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/onboardingItemPreviewBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"/>

    <TextView
        android:id="@+id/onboardingItemTitleTextView"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="@dimen/dimen_15_dp"
        android:layout_marginEnd="@dimen/dimen_15_dp"
        android:textSize="@dimen/headling_18_sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        tools:text="Onboarding Title"
        app:layout_constraintTop_toBottomOf="@id/onboardingItemPreviewBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/onboardingItemDescriptionTextView"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:layout_marginStart="@dimen/dimen_15_dp"
        android:layout_marginEnd="@dimen/dimen_15_dp"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:layout_marginBottom="50dp"
        android:textColor="@color/black"
        tools:text="Onboarding Text\ntext\ntext\ntext"
        app:layout_constraintTop_toBottomOf="@id/onboardingItemTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>